<% provide :title, t(".all_suggestions") %>
<h1><%= t ".all_suggestions" %></h1>
<div class="md-col-12 ">
  <%= link_to t(".add_suggestion"), new_suggestion_path,
    class: "btn btn-success" %>
</div>
<table class="table table-striped table-hover">
  <thead>
    <tr class="display-suggestion">
      <th class="index"><%= t ".index" %></th>
      <th class="image"><%= t ".image" %></th>
      <th class="name"><%= t ".product" %></th>
      <th class="category"><%= t ".category" %></th>
      <th class="description"><%= t ".description" %></th>
      <th class="status"><%= t ".status" %></th>
      <th class="action"><%= t ".action" %></th>
    </tr>
  </thead>
  <tbody>
    <%= render @suggestions %>
  </tbody>
</table>

<div class="paginate">
  <%= will_paginate @suggestions %>
</div>
