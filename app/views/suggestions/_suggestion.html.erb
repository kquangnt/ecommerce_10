<tr class="suggestion">
  <td class="index"><%= index_for suggestion_counter, @suggestions.current_page,
    Settings.suggestion.per_page %></td>
  <td class="image"><%= image_tag suggestion.image.url, size: Settings.suggestion.size %></td>  
  <td class="name"><%= suggestion.product %></td>
  <td class="category"><%= suggestion.category.name %></td>
  <td class="description"><%= suggestion.description %></td>
  <td class="status"><%= suggestion.status %></td>
  <td class="action">
    <% if can? :destroy, suggestion %>
      <%= link_to t("suggestions.destroy.btn_delete"), suggestion, method: :delete,
        data: {confirm: t("suggestions.destroy.confirm_delete", name: suggestion.product)},
        class: "btn btn-danger btn-action" %>
    <% end %>
  </td>
</tr>
