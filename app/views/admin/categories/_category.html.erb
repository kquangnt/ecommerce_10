<tr class="category">
  <td class="index"><%= index_for category_counter, @categories.current_page,
    Settings.category.per_page %></td>
  <td class="name"><%= category.name %></td>
  <td class="total-product"><%= category.products.size %></td>
  <td class="total-suggestion"><%= category.suggestions.size %></td>
  <td class="action">
    <%= link_to t(".edit"), edit_admin_category_path(category.id),
      class: "btn btn-primary btn-action" %>
    <%= link_to t(".delete"), [:admin, category], method: :delete,
      data: {confirm: t(".confirm_delete", name: category.name, 
        product: category.products.size, suggestion: category.suggestions.size)},
      class: "btn btn-danger btn-action" %>
  </td>
</tr>
