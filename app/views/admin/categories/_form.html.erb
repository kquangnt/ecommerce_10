<%= form_for [:admin, @category], html: {class: "form-horizontal category-form",
  id: "category_form"} do |f| %>
  <%= render "shared/error_messages", object: f.object %>
  <div class="control-group">
    <%= f.label :name, t(".name") %>
    <div class="controls">
      <%= f.text_field :name, class: "form-control", id: "name",
        placeholder: t(".name_holder") %>
    </div>
  </div>
  <div class="form-actions add-category">
    <%= f.submit yield(:button_text), class: "btn btn-primary" %>
    <%= link_to t(".cancel"), :back, class: "btn btn-default" %>
  </div>
<% end %>
