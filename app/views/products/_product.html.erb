<div class="col-md-3">
  <div class="col-md-12 frame-product">
  <div class="image">
    <%= image_tag product.image.url, size: Settings.product.size_small %>
  </div>
  <div class="information">
    <h4><%= link_to product.name, product_path(product) %></h4>
    <h5><i><b><%= number_to_currency product.price,
      precision: Settings.product.precision %></b></i></h5>
    <%= form_tag carts_path do %>
      <%= hidden_field_tag :product_id, product.id %>
      <%= hidden_field_tag :quantity, Settings.cart.init_quantity %>
      <%= button_tag class: "btn btn-primary" do %>
        <i class="glyphicon glyphicon-shopping-cart"></i>
        <%= t "products.add_to_cart" %>
      <% end %>
    <% end %>
  </div>
  </div>
</div>
