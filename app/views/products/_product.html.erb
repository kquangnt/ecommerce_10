<div class="col-md-3">
  <div class="col-md-12 frame-product">
  <div class="image">
    <%= image_tag product.image.url, size: Settings.product.size_small %>
  </div>
  <div class="information">
    <h4><%= link_to product.name, product_path(product) %></h4>
    <h5><i><b><%= number_to_currency product.price,
      precision: Settings.product.precision %></b></i></h5>
    <h5><i><b><%= link_to content_tag(:i, t("products.add_to_cart"), 
      class: "glyphicon glyphicon-shopping-cart"), "#" %></b></i></h5>
  </div>
  </div>
</div>
