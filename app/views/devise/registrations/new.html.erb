<div class="col-md-4 col-md-offset-4">
  <h2 class="text-center"><%= t ".header" %></h2>

  <%= form_for resource, html: {multipart: true}, as: resource_name,
    url: registration_path(resource_name) do |f| %>
    <%= devise_error_messages! %>
    
    <div class="field form-group">
      <%= f.label :name %><br />
      <%= f.text_field :name, class: "form-control", autofocus: true %>
    </div>

    <div class="field form-group">
      <%= f.label :address %><br />
      <%= f.text_field :address, class: "form-control", autofocus: true %>
    </div>

    <div class="field form-group">
      <%= f.label :phone_number %><br />
      <%= f.text_field :phone_number, class: "form-control", autofocus: true %>
    </div>

    <div class="field form-group">
      <%= f.label :email %><br />
      <%= f.email_field :email, class: "form-control", autofocus: true %>
    </div>

    <div class="field form-group">
      <%= f.label :password %>
      <% if @minimum_password_length %>
      <em><%= t ".msg_length_min", number: @minimum_password_length %></em>
      <% end %><br />
      <%= f.password_field :password, class: "form-control", autocomplete: "off" %>
    </div>

    <div class="field form-group">
      <%= f.label :password_confirmation %><br />
      <%= f.password_field :password_confirmation, class: "form-control", 
        autocomplete: "off" %>
    </div>

    <div class="field form-group">
      <%= f.label :avata %><br />
      <%= f.file_field :image, accept: Settings.user.image_accept %>
    </div>

    <div class="actions form-group">
      <%= f.submit t(".btn_submit"), class: "form-control btn btn-primary" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
